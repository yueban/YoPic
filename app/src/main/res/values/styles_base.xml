<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@android:color/white</item>
        <!-- transitions -->
        <item name="android:windowContentTransitions">true</item>
        <!--<item name="android:windowEnterTransition">@android:transition/explode</item>-->
        <!--<item name="android:windowExitTransition">@android:transition/explode</item>-->
        <!--<item name="android:windowReenterTransition">@android:transition/explode</item>-->
        <!--<item name="android:windowReturnTransition">@android:transition/explode</item>-->
        <item name="android:windowSharedElementEnterTransition">@android:transition/move</item>
        <item name="android:windowSharedElementExitTransition">@android:transition/move</item>
        <!--<item name="android:windowSharedElementReenterTransition">@android:transition/move</item>-->
        <!--<item name="android:windowSharedElementReturnTransition">@android:transition/move</item>-->
        <item name="android:fragmentSharedElementEnterTransition">@android:transition/move</item>
        <item name="android:fragmentSharedElementReturnTransition">@android:transition/move</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.NoActionBar.Detail">
        <item name="android:windowBackground">@android:color/black</item>
    </style>

    <style name="AppTheme.NoActionBar.About">
        <item name="aboutPageHeaderBackground">@android:color/white</item>
        <item name="aboutPageHeaderTextColor">@android:color/black</item>
        <item name="aboutPageNavigationIcon">@drawable/outline_close_24px</item>
    </style>

    <!-- toolbar -->
    <style name="ToolbarTheme" parent="ThemeOverlay.AppCompat.Light">
        <!-- drawer icon color -->
        <item name="android:colorControlNormal">@android:color/black</item>
        <!-- options menu three dots color -->
        <item name="android:textColorSecondary">@android:color/black</item>
    </style>

    <style name="Toolbar">
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:theme">@style/ToolbarTheme</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
    </style>

    <style name="Toolbar.Constraint">
        <item name="android:layout_width">0dp</item>
        <item name="layout_constraintLeft_toLeftOf">parent</item>
        <item name="layout_constraintRight_toRightOf">parent</item>
        <item name="layout_constraintTop_toTopOf">parent</item>
    </style>

    <!-- text -->
    <style name="Text">
        <item name="android:ellipsize">end</item>
    </style>

    <style name="Text.Title">
        <item name="android:textSize">@dimen/text_main</item>
        <item name="android:textColor">@color/sel_text_main</item>
    </style>

    <style name="Text.Title.Dark">
        <item name="android:textColor">@color/sel_text_main_dark</item>
    </style>

    <style name="Text.Title.SingleLine">
        <item name="android:lines">1</item>
    </style>

    <style name="Text.SubTitle">
        <item name="android:textSize">@dimen/text_sub</item>
        <item name="android:textColor">@color/sel_text_sub</item>
    </style>

    <style name="Text.SubTitle.Dark">
        <item name="android:textColor">@color/sel_text_sub_dark</item>
    </style>

    <style name="Text.SubTitle.SingleLine">
        <item name="android:lines">1</item>
    </style>

    <style name="Text.Label">
        <item name="android:textSize">@dimen/text_label</item>
        <item name="android:textColor">@color/text_label</item>
    </style>

    <style name="Text.Label.Dark">
        <item name="android:textColor">@color/text_label_dark</item>
    </style>

    <!-- switch -->
    <style name="Switch">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Switch.UnClick">
        <item name="android:background">@null</item>
        <item name="android:clickable">false</item>
    </style>
</resources>
